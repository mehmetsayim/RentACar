@model RentACarData.Car

<div class="form-group">
    <label asp-for="CategoryIds"></label>
    <select asp-for="CategoryIds" asp-items="@ViewBag.Categories as SelectList" multiple class="form-control">
        <option value="" disabled selected>Seçiniz...</option>
    </select>
    <span asp-validation-for="CategoryIds"></span>
</div>

<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name"></span>
</div>

<div class="form-group">
    <label asp-for="PriceText"></label>
    <input asp-for="PriceText" class="form-control" />
    <span asp-validation-for="PriceText"></span>
</div>

<div class="form-group">
    <label asp-for="DiscountedPriceText"></label>
    <input asp-for="DiscountedPriceText" class="form-control" />
    <span asp-validation-for="DiscountedPriceText"></span>
</div>

<div class="form-group">
    <label asp-for="Descriptions"></label>
    <textarea asp-for="Descriptions" class="summernote"></textarea>
</div>
<div class="form-group">
    <div class="custom-file">
        <input type="file" class="custom-file-input" id="ImageFiles" name="ImageFiles" multiple />
        <label class="custom-file-label" for="ImageFiles">Görsel seçiniz</label>
    </div>
    <div class="d-flex mb-2">
        @foreach (var carImage in Model.CarImages)
        {
            <div class="card">
                <img class="card-img-top" src="data:image/jpeg;base64, @Convert.ToBase64String(carImage.Image)" />
                <div class="card-body">
                    <div class="card-text">
                        <label>
                            <input type="checkbox" name="ImagesToDeleted" value="@carImage.Id" />
                            Sil
                        </label>
                    </div>
                </div>
            </div>
        }
    </div>
    <div id="imagePreview" class="d-flex">

    </div>
</div>

<div class="form-check">
    <input class="form-check-input" asp-for="Enabled">
    <label class="form-check-label" asp-for="Enabled"></label>
</div>
